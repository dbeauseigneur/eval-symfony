                    {# Génération du label. #}
                    {{ form_label(edit_form.title, "Titre de l'album", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {# Affichage des erreurs pour ce champ précis. #}
                    {{ form_errors(edit_form.title) }}
