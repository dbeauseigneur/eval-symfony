                        {# Génération de l'input. #}
                        {{ form_widget(edit_form.genre, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {# Génération du label. #}
                    {{ form_label(edit_form.support, "Genre de l'album", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {# Affichage des erreurs pour ce champ précis. #}
                    {{ form_errors(edit_form.support) }}
                    <div class="col-sm-4">
                        {# Génération de l'input. #}
                        {{ form_widget(edit_form.support, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
        {{ form_widget(edit_form) }}
    <input type="submit" value="Edit"/>
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
